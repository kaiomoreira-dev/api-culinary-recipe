{
    "openapi": "3.0.0",
    "info": {
    "title": "Culinary Recipe Documentation",
    "description": "This is an application to demonstrate the operations of CRUD in a cooking recipe system.",
    "version": "1.0.0",
    "contact":{
            "email": "kaio-dev@outlook.com"
        }
    },
    "paths": {
        "/author":{
            "post": {
                "tags": ["Author"],
                "summary": "Create a Author",
                "description": "Create a new Author",
                "security": [
                    { "bearerAuth": [] }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "whatsapp": "string"
                                   
                                },
                                "example": {
                                    "name": "Mary Elizabeth Smith",
                                    "whatsapp": "##-####-####"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "401": {
                        "description": "Author already exists"
                    }
                }
            }
        },
        "/email":{
            "post": {
                "tags": ["Email"],
                "summary": "Create a Email",
                "description": "Create a new email for author",
                "security": [
                    { "bearerAuth": [] }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "e_mail": {
                                        "type": "string"
                                    },
                                    "author_id": "string"
                                   
                                },
                                "example": {
                                    "e_mail": "teste@test.com",
                                    "author_id": "53cd5011-a659-4ca8-b04a-01e33abde707"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "401": {
                        "description": "Email already exists"
                    }
                }
            },
            "get": {
                "tags": ["Email"],
                "summary": "List Emails",
                "description": "List all emails exists",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id":{
                                                "type":"string"
                                            },
                                            "e_mail": {
                                                "type":"string"
                                            },
                                            "author_id": {
                                                "type":"string"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            }

                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/email/find/{id}":{
            "get":{
                "tags": ["Email"],
                "summary":"Find email by id",
                "description": "Find a specific email by id",
                "security": [
                    { "bearerAuth": [] }
                ],
                "parameters": [
                    {
                    "name": "id",
                    "in": "path",
                    "description": "Email id",
                    "required": true,
                        "schema": {
                         "type": "string",
                         "format": "uuid"
                        }
                    }
                ],
                "responses":{
                    "200": {
                        "description": "Email find success."
                    },
                    "404": {
                        "description": "Email not found!"
                    }
                }
            }
        },
        "/email/update": {
            "patch": {
                "tags": ["Email"],
                "summary": "Update a Email",
                "description": "Update a email for author",
                "security": [
                    { "bearerAuth": [] }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "oldE_mail": {
                                        "type": "string"
                                    },
                                    "newE_mail": {
                                        "type": "string"
                                    }
                                   
                                   
                                },
                                "example": {
                                    "oldE_mail": "teste1@test.com",
                                    "newE_mail": "teste@test.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "404": {
                        "description": "Email not found"
                    }
                }
            }
        },
        "/email/delete": {
            "delete": {
                "tags": ["Email"],
                "summary": "Delete a Email",
                "description": "Delete a email for author",
                "security": [
                    { "bearerAuth": [] }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "id": "643a172e-54d1-49ad-8877-9687632da171"                                    
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Email deleted successfully."
                    },
                    "404": {
                        "description": "Email not found!"
                    }
                }
            }
        }
        
    }
}